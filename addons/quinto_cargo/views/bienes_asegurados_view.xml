<odoo>
    <!-- Vista de la Lista de Bienes -->
    <record id="quintocargo_bienes_asegurados_tree_view" model="ir.ui.view">
        <field name="name">quintocargo.bien_asegurado.tree</field>
        <field name="model">quintocargo.bien_asegurado</field>
        <field name="arch" type="xml">
            <tree string="Bienes Asegurados">
                <field name="nombre" string="Nombre" />
                <field name="descripcion" string="Descripción"/>
                <field name="valor" string="Valor"/>
                <field name="tipo_bien" string="Tipo de Bien"/>
                <field name="peso" string="Peso"/>
                <field name="dimensiones_Alto" string="Dimensiones Alto"/>
                <field name="dimensiones_Ancho" string="Dimensiones Ancho"/>
                <field name="dimensiones_Largo" string="Dimensiones Largo"/>
                <field name="imagen" string="Imagen"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario de Bienes -->
    <record id="quintocargo_bienes_asegurados_form_view" model="ir.ui.view">
        <field name="name">quintocargo.bien_asegurado.form</field>
        <field name="model">quintocargo.bien_asegurado</field>
        <field name="arch" type="xml">
            <form string="Bien Asegurado">
                <sheet>
                    <group>
                        <group>
                            <field name="nombre" />
                            <field name="descripcion" />
                            <field name="valor" />
                            <field name="tipo_bien" />
                            <field name="peso" />
                        </group>
                        <group>
                            <field name="dimensiones_Alto" />
                            <field name="dimensiones_Ancho" />
                            <field name="dimensiones_Largo" />
                            <field name="imagen" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Mudanzas Asignadas">
                            <field name="mudanza_id" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Gráfico de Bienes Asegurados por Tipo de Bien -->
    <record id="quintocargo_bienes_asegurados_graph_view" model="ir.ui.view">
        <field name="name">quintocargo.bien_asegurado.graph</field>
        <field name="model">quintocargo.bien_asegurado</field>
        <field name="arch" type="xml">
            <graph string="Bienes Asegurados por Tipo de Bien" type="bar">
                <!-- Categoría por Tipo de Bien -->
                <field name="tipo_bien" type="dimension"/>
                <!-- Valor Total de los Bienes Asegurados -->
                <field name="valor" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action para la Vista de Gráfico -->
    <record id="action_bienes_asegurados_graph" model="ir.actions.act_window">
        <field name="name">Bienes Asegurados - Gráfico</field>
        <field name="res_model">quintocargo.bien_asegurado</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="quintocargo_bienes_asegurados_graph_view"/>
        <field name="help" type="html">
            <p>
                Aquí puedes ver la distribución de los bienes asegurados por tipo de bien y su valor total.
            </p>
        </field>
    </record>

    <!-- Action Bienes Asegurados -->
    <record id="action_bienes_asegurados" model="ir.actions.act_window">
        <field name="name">Bienes Asegurados</field>
        <field name="res_model">quintocargo.bien_asegurado</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar los bienes asegurados de QuintoCargo. Selecciona un bien asegurado
                para editarlo, crea uno nuevo o visualiza los datos en gráfico.
            </p>
        </field>
    </record>
</odoo>
