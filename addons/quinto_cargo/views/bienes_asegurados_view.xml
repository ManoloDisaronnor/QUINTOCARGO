<odoo>
    <!-- Vista de la Lista de Bienes -->
    <record id="quintocargo_bienes_asegurados_tree_view" model="ir.ui.view">
        <field name="name">quintocargo.bien_asegurado.tree</field>
        <field name="model">quintocargo.bien_asegurado</field>
        <field name="arch" type="xml">
            <tree string="Bienes Asegurados">
                <field name="imagen" string="Imagen" widget="image" options="{'size': [50, 50]}" />
                <field name="nombre" string="Nombre" />
                <field name="tipo_bien" string="Tipo de Bien" />
                <field name="valor" string="Valor" widget="monetary" />
                <field name="volumen" string="Volumen (m³)" />
                <field name="peso" string="Peso (kg)" />
            </tree>
        </field>
    </record>


    <!-- Vista de Formulario de Bienes -->
    <record id="quintocargo_bienes_asegurados_form_view" model="ir.ui.view">
        <field name="name">quintocargo.bien_asegurado.form</field>
        <field name="model">quintocargo.bien_asegurado</field>
        <field name="arch" type="xml">
            <form string="Bien Asegurado">
                <sheet>
                    <group>
                        <h2>Información Básica</h2>
                        <group>
                            <field name="nombre" />
                            <field name="tipo_bien" />
                            <field name="valor" />
                            <field name="peso" />
                        </group>
                    </group>
                    <group>
                        <h2>Dimensiones</h2>
                        <group>
                            <field name="dimensiones_Alto" />
                            <field name="dimensiones_Ancho" />
                            <field name="dimensiones_Largo" />
                            <field name="volumen" readonly="1" />
                        </group>
                    </group>
                    <group>
                        <h2>Imagen</h2>
                        <field name="imagen" widget="image" options="{'size': [150, 150]}" />
                    </group>
                    <notebook>
                        <page string="Mudanzas Asignadas">
                            <field name="mudanza_id" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban-->
    <record id="quintocargo_bienes_asegurados_kanban_view" model="ir.ui.view">
        <field name="name">quintocargo.bien_asegurado.kanban</field>
        <field name="model">quintocargo.bien_asegurado</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global"
                            style="border: 1px solid #ccc; padding: 10px; border-radius: 8px; background-color: #f9f9f9;">
                            <!-- Imagen en la esquina superior derecha -->
                            <div style="position: absolute; top: 10px; right: 10px;">
                                <img t-if="record.imagen.raw_value"
                                    t-att-src="kanban_image('quintocargo.bien_asegurado', 'imagen', record.id)"
                                    style="width: 100px; height: 100px; border-radius: 5px;" />
                                <t t-if="!record.imagen.raw_value">
                                    <span style="font-size: 12px; color: #888;">Sin imagen</span>
                                </t>
                            </div>

                            <!-- Nombre del Bien -->
                            <div style="text-align: left; margin-bottom: 10px;">
                                <h2 style="font-size: 20px; font-weight: bold; color: #333;">
                                    <t t-esc="record.nombre.value or 'Sin nombre'" />
                                </h2>
                            </div>

                            <!-- Información General -->
                            <div>
                                <strong style="color: #666;">Tipo:</strong>
                                <span>
                                    <t t-esc="record.tipo_bien.value or 'No definido'" />
                                </span>
                                <br />
                                <strong style="color: #666;">Valor:</strong>
                                <span><t t-esc="record.valor.raw_value or 0" /> €</span>
                                <br />
                                <strong style="color: #666;">Peso:</strong>
                                <span><t t-esc="record.peso.raw_value or 0" /> kg</span>
                                <br />
                                <strong style="color: #666;">Volumen:</strong>
                                <span><t t-esc="record.volumen.raw_value or 0" /> m³</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action para la Vista Kanban -->
    <record id="action_bienes_asegurados_kanban" model="ir.actions.act_window">
        <field name="name">Bienes Asegurados - Kanban</field>
        <field name="res_model">quintocargo.bien_asegurado</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="quintocargo_bienes_asegurados_kanban_view" />
        <field name="help" type="html">
            <p>
                Visualiza los bienes asegurados en formato Kanban.
            </p>
        </field>
    </record>

    <!-- Action Bienes Asegurados -->
    <record id="action_bienes_asegurados" model="ir.actions.act_window">
        <field name="name">Bienes Asegurados</field>
        <field name="res_model">quintocargo.bien_asegurado</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Aquí puedes gestionar los bienes asegurados de QuintoCargo. Selecciona un bien
                asegurado
                para editarlo o crear uno nuevo.
            </p>
        </field>
    </record>
</odoo>